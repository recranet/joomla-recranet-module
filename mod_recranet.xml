<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
    <name>Recranet</name>
    <author>Recranet</author>
    <version>1.3.0</version>
    <description>Recranet module voor online boekingen. Heeft u vragen mail dan naar support@recranet.com.</description>
    <files>
        <filename>mod_recranet.xml</filename>
        <filename module="mod_recranet">mod_recranet.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="locale"
                    type="list"
                    default="nl"
                    label="Taal"
                    description="">
                    <option value="nl">Nederlands</option>
                    <option value="de">Deutsch</option>
                    <option value="en">English</option>
                </field>
                <field
                    name="view"
                    type="list"
                    default="list"
                    label="Weergave"
                    description="">
                    <option value="accommodations">Accommodaties</option>
                    <option value="packages">Arrangementen</option>
                    <option value="accommodation-reservation-form">Accommodatie reserveringsformulier</option>
                    <option value="search-form">Zoek en boek</option>
                </field>
                <field
                    name="accommodationsView"
                    type="list"
                    default="list"
                    label="Accommodaties overzicht"
                    description="">
                    <option value="list">Lijstweergave</option>
                    <option value="grid">Rasterweergave</option>
                </field>
                <field
                    name="organization"
                    type="number"
                    default=""
                    label="Organisatie ID"
                    description="" />
                <field
                    name="category"
                    type="number"
                    default=""
                    label="Categorie ID"
                    description="" />
                <field
                    name="accommodation"
                    type="number"
                    default=""
                    label="Accommodatie ID"
                    description="" />
                <field
                    name="action"
                    type="text"
                    default=""
                    label="Formulieren URL"
                    description="" />
                <field
                    name="jquery"
                    type="checkbox"
                    default="0"
                    label="Laad jQuery in"
                    description="" />
                <field
                    name="sdk"
                    type="checkbox"
                    default="1"
                    label="Laad de Recranet SDK"
                    description="" />
                <field
                    name="html5Mode"
                    type="checkbox"
                    default="0"
                    label="HTML5 routing mode (Let op: mod_rewrite regels zijn noodzakelijk)"
                    description="" />
                <field
                    name="enable_initializer"
                    type="checkbox"
                    default="0"
                    label="Toon een laadeffect"
                    description="Wanneer de website veel externe bronnen bevat kan het even duren voordat Recranet wordt ingeladen." />
            </fieldset>
            <fieldset name="advanced">
                <field
                    name="breakpointSmall"
                    type="number"
                    default="720"
                    label="Breakpoint (small)"
                    description="" />
                <field
                    name="breakpointMedium"
                    type="number"
                    default="940"
                    label="Breakpoint (medium)"
                    description="" />
                <field
                    name="breakpointLarge"
                    type="number"
                    default="1140"
                    label="Breakpoint (large)"
                    description="" />
            </fieldset>
        </fields>
    </config>
</extension>
