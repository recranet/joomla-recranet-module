<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
    <name>Recranet</name>
    <author>Recranet</author>
    <version>1.1.0</version>
    <description>Recranet widget voor online boekingen</description>
    <files>
        <filename>mod_recranet.xml</filename>
        <filename module="mod_recranet">mod_recranet.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="locale"
                    type="list"
                    default="nl"
                    label="Taal"
                    description="">
                    <option value="nl">Nederlands</option>
                    <option value="de">Deutsch</option>
                    <option value="en">English</option>
                </field>
                <field
                    name="organization"
                    type="number"
                    default=""
                    label="Organisatie ID"
                    description="" />
                <field
                    name="accommodationsView"
                    type="list"
                    default="list"
                    label="Accommodatie weergave"
                    description="">
                    <option value="list">Lijstweergave</option>
                    <option value="grid">Rasterweergave</option>
                </field>
                <field
                    name="category"
                    type="number"
                    default=""
                    label="Categorie ID"
                    description="" />
            </fieldset>
            <fieldset name="advanced">
                <field
                    name="breakpointSmall"
                    type="number"
                    default="720"
                    label="Breakpoint (small)"
                    description="" />
                <field
                    name="breakpointMedium"
                    type="number"
                    default="940"
                    label="Breakpoint (medium)"
                    description="" />
                <field
                    name="breakpointLarge"
                    type="number"
                    default="1140"
                    label="Breakpoint (large)"
                    description="" />
            </fieldset>
        </fields>
    </config>
</extension>
